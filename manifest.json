{
  "manifest_version": 3,
  "name": "LifeOS Extension",
  "version": "1.0.0",
  "description": "Your personal life management extension",
  "action": {
    "default_popup": "popup.html",
    "default_title": "LifeOS"
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
